<%- include("./partials/header") %>

<div class="container text-center">
  <h2 class="h1 p-3 m-4">Login:-</h2>
  <form method="POST" action="/login">
    <div class="form-group">
      <input
        name="username"
        type="text"
        class="form-control m-5 p-3"
        placeholder="Enter Username"
      />
      <input
        name="password"
        type="password"
        class="form-control m-5 p-3"
        placeholder="Enter password"
      />
      <button class="btn btn-primary m-3 p-3" style="width: 20vw;">
        Login
      </button>
    </div>
  </form>
</div>

<%- include("./partials/footer") %>
